{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ES2017",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@enterprise-ai/x": [
                "./src/packages/x"
            ],
            "@enterprise-ai/x-sdk": [
                "./src/packages/x-sdk"
            ],
            "@enterprise-ai/x-markdown": [
                "./src/packages/x-markdown"
            ]
        },
        "baseUrl": ".",
        "rootDir": "."
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "env.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}